  function balloon(e) {
    popup
      .setLatLng(e.latlng)
      .setContent("You clicked the map at " + e.latlng.toString())
      .openOn(window.mymap);
  }

  function onMapClick(e) {
    //balloon(e);
  }

  function onMapDblClick(e) {
    recenter(e.latlng.lat, e.latlng.lng);
  }

  //mymap.on('click', onMapClick);
